{% extends '::base.html.twig' %}

{% block headline %}View All Allergies{% endblock headline %}

{% block content_content %}
{{ parent() }}
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('allergy_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.type }}</td>
            <td>
            <ul>
                <li>
                    <a href="{{ path('allergy_show', { 'id': entity.id }) }}">show</a>
                </li>
                <li>
                    <a href="{{ path('allergy_edit', { 'id': entity.id }) }}">edit</a>
                </li>
            </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('allergy_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock content_content %}

{% block content_sidebar %}{% endblock content_sidebar %}