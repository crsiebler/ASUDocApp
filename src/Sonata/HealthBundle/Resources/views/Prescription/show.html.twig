{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Prescription</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Dateexpires</th>
                <td>{{ entity.dateExpires|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Dateprescribed</th>
                <td>{{ entity.datePrescribed|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Frequency</th>
                <td>{{ entity.frequency }}</td>
            </tr>
            <tr>
                <th>Dosage</th>
                <td>{{ entity.dosage }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Reason</th>
                <td>{{ entity.reason }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('prescription') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('prescription_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('prescription_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
