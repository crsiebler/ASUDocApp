{% extends '::base.html.twig' %}

{% block headline %}Edit Prescription #{{ entity.id }}{% endblock headline %}

{% block content_content %}
{{ parent() }}
<form action="{{ path('prescription_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <input type="hidden" name="_method" value="PUT" />
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('prescription') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('prescription_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock content_content %}

{% block content_sidebar %}{% endblock content_sidebar %}