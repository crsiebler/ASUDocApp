{% extends '::base.html.twig' %}

{% block headline %}Editing Note #{{ entity.username }}{% endblock headline %}

{% block content_content %}
{{ parent() }}
    <h1>Note edit</h1>

    <form action="{{ path('note_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('note') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('note_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock content_content %}

{% block content_sidebar %}{% endblock content_sidebar %}