{% extends '::base.html.twig' %}

{% block headline %}Editing Appointment{% endblock headline %}

{% block content_content %}
{{ parent() }}
<form action="{{ path('appointment_update', { 'id': entity.id, 'patientID': patientID, 'patientName': patientName }) }}" method="post" {{ form_enctype(edit_form) }}>
    <input type="hidden" name="_method" value="PUT" />
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ app.request.headers.get('referer') }}">Back</a>
    </li>
    {% if is_granted('ROLE_USER') %}
        <li>
            <a href="{{ path('user_splash') }}">View Splash Page</a>
        </li>
        <li>
            <a href="{{ path('user_show', { 'id': patientID }) }}">View Patient Page</a>
        </li>
    {% endif %}
</ul>
{% endblock content_content %}

{% block content_sidebar %}{% endblock content_sidebar %}