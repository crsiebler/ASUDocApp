{% extends '::base.html.twig' %}

{% block headline %}Edit Primary Doctor{% endblock headline %}

{% block content_content %}
{{ parent() }}
<form action="{{ path('edit_primary_doctor', { 'primaryDoctor': primaryDoctor, 'userID': userID, 'userName': userName }) }}" method="post" >
    <input type="text" name="name" value="{{ primaryDoctor }}"/>
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    {% if is_granted('ROLE_USER') %}
        <li>
            <a href="{{ path('user_splash') }}">View Splash Page</a>
        </li>
    {% endif %}
</ul>
{% endblock content_content %}

{% block content_sidebar %}{% endblock content_sidebar %}