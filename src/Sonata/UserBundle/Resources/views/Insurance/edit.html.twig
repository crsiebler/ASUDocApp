{% extends '::base.html.twig' %}

{% block headline %}Editing Insurance Information{% if userName is not null %} for {{ userName }}{% endif %}{% endblock headline %}

{% block content_content %}
{{ parent() }}
<form action="{{ path('insurance_update', { 'id': entity.id, 'userID': userID, 'userName': userName }) }}" method="post" {{ form_enctype(edit_form) }}>
    <input type="hidden" name="_method" value="PUT" />
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>
<form action="{{ path('insurance_delete', { 'id': entity.id }) }}" method="post" style="display: inline-block;">
    <input type="hidden" name="_method" value="DELETE" />
    {{ form_widget(delete_form) }}
    <button type="submit">Delete</button>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ app.request.headers.get('referer') }}">Back</a>
    </li>
    <li>
        <a href="{{ path("user_show", { 'id': userID }) }}">Back to Patient Page</a>
    </li>
</ul>
{% endblock content_content %}

{% block content_sidebar %}{% endblock content_sidebar %}